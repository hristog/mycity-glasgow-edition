<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/createNewAccount_textView_email"
        android:layout_alignParentTop="true"
        style="@style/text"
        android:text="E-mail" />

    <EditText
        android:id="@+id/createNewAccount_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createNewAccount_textView_email"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/createNewAccount_textView_password"
        style="@style/text"
        android:layout_below="@+id/createNewAccount_email"
        android:text="Password" />

    <EditText
        android:id="@+id/createNewAccount_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createNewAccount_textView_password"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/createNewAccount_textView_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createNewAccount_password"
        android:text="Display name" />

    <EditText
        android:id="@+id/createNewAccount_displayName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createNewAccount_textView_displayName"
        android:ems="10" />

    <Button
        android:id="@+id/createNewAccount_button_chooseTokenAndHouse"
        style="@style/button"
        android:layout_below="@+id/createNewAccount_displayName"
        android:background="@drawable/border_light"
        android:text="Choose Avatar and Property Type" />

    <Button
        android:id="@+id/createNewAccount_cancel"
        style="@style/button"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/createNewAccount_button_chooseTokenAndHouse"
        android:background="@drawable/border_light"
        android:text="Cancel" />

</RelativeLayout>